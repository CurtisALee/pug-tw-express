{
  "name": "express-pug-twcss",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch:css & npm run watch:pug & nodemon index.js",
    "build": "npm run build:css && npm run build:pug",
    "build:css": "NODE_ENV=production postcss src/css/style.css -o public/css/style.css",
    "watch:css": "postcss src/css/style.css -o public/css/style.css -w",
    "build:pug": "NODE_ENV=production pug /pages -o /pages -P",
    "watch:pug": "pug /pages -o /pages -P -w"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "express": "^4.18.2",
    "glob": "^9.3.4",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "pug": "^3.0.2",
    "tailwindcss": "^3.3.1"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    },
    "map": false,
    "output": "public/css"
  }
}
